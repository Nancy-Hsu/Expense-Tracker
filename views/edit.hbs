<div class="row mt-3 d-flex justify-content-center p-4">
  <div class="col-sm-5 bg-white bg-opacity-50 rounded m-2">
    <div class="my-3 row">
      <small class="require-mark col-sm-4 ps-2">為必填欄位</small>
      <h3 class="col-sm-8 text-center">
        請修改你的支出
      </h3>
    </div>

    <form action="/record/{{ record._id }}?_method=PUT" method="post" id="edit-form" class="mt-3">
      <div class="mb-3 row">
        <label for="name" class="col-lg-3  col-form-label text-center py-2"><span><i
              class="fas fa-highlighter"></i></span>名稱</label>
        <div class="col-lg-9">
          <input type="text" class="form-control" name="name" id="name" value="{{ record.name }}" required>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="date" class="col-lg-3 col-form-label text-center"><span><i
              class="fas fa-table"></i></span>日期</label>
        <div class="col-lg-9">
          <input type="date" class="form-control" name="date" id="date" value="{{ dateTransfer record.date}}" required>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="category" class="col-lg-3 col-form-label text-center"><span><i
              class="fas fa-list"></i></span>類別</label>
        <div class="col-lg-9">
          <select class="form-select" aria-label="Default select example" name="categoryId" id="category" required>
            {{!-- <option>請選擇</option> --}}
            {{{makeOptions categories selectedOption}}}
          </select>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="amount" class="col-lg-3 col-form-label text-center"><span><i
              class="fas fa-sack-dollar"></i></span>金額</label>
        <div class="col-lg-9">
          <input type="number" class="form-control" name="amount" id="amount" min="0" value="{{ record.amount }}"
            required>
        </div>
      </div>
      <div class="mb-3 row justify-content-end">
        <div class="col-lg-9">
          <button type="submit" class=" btn w-100" id="submitButton">送出</button>
        </div>

      </div>
  </div>
  </form>
</div>
</div>

<script>
  const submitButton = document.querySelector('#submitButton')
  const form = document.querySelector('#edit-form')
  submitButton.addEventListener('click', function onSubmitButtonClicked(event) {
    form.classList.add('was-validated')
  })
</script>